FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    leftFace
    {
        type            zeroGradient;
    }

    rightFace
    {
        type            fixedFluxPressure; //zeroGradient;
    }

    bottom
    {
        type            fixedFluxPressure;
    }
    top
    {
        type            totalPressure;
        p0              uniform 0;
    }
    frontAndBack
    {
        type            empty;
    }
}

