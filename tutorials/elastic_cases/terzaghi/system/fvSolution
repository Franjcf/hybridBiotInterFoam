FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.wetting.*"
    {
        nAlphaCorr      2;
        nAlphaSubCycles 2; 
        cAlpha          1;  

        MULESCorr       no;
        nLimiterIter    3;

        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0;
    }

    pcorr
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-5;
        relTol          0;
    }

    pcorrFinal
    {
        $pcorr;
        relTol          0;
    }

    p
    {
        solver          PCG;
        preconditioner  DIC;  
        tolerance       1e-06;
        relTol          0.1;
	smoother        GaussSeidel;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

   "(U|Us)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
	maxIter         1000;
    }

    "(U|Us)Final"
    {
        $U;
        relTol          0;
    }

    epss
    {
        solver          smoothSolver;
	smoother        GaussSeidel;
        tolerance       1e-06;
        relTol          0;
    }    

    epssFinal
    {
        $epss;
        relTol          0;
    }

    "(D|T)"
    {
        solver          PBiCG;
        preconditioner  DILU;  
        tolerance       1e-06;
        relTol          0.9;
        smoother        GaussSeidel;
        nCellsInCoarsestLevel 20;
    }

}

PIMPLE
{
    momentumPredictor   no;
    nOuterCorrectors    1;
    nCorrectors         2;
    nNonOrthogonalCorrectors 0;

    pRefCell    0;
    pRefValue    0;
}

relaxationFactors
{
    equations
    {
        ".*" 1;
    }
}

stressAnalysis
{
    compactNormalStress yes;
    nCorrectors     1;
    D               1e-06;
}

