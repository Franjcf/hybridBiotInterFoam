FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      transportProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases (wetting nonwetting);

wetting //alpha=1 wetting alpha1 ("b" if compared to multiphase toolbox)
{
    transportModel  Newtonian;
    nu              [0 2 -1 0 0 0 0] 1e-6;
    rho             [1 -3 0 0 0 0 0] 1000;
}

nonwetting //alpha=0 nonwetting alpha2 = 1-alpha1 ("a" in multiphase toolbox)
{
    transportModel  Newtonian;
    nu              [0 2 -1 0 0 0 0] 4e-6; //in unitns of kinematic viscocity
    rho             [1 -3 0 0 0 0 0] 800;
}

sigma            [1 0 -2 0 0 0 0]  0.15;  //0.097;

k01              [0 2 0 0 0 0 0] 1e-15;

k02              [0 2 0 0 0 0 0] 1e-10; //second phase does not like to be in clay

theta0           5; //second phase does not like to be in clay

//Permeability Coefficients

alpha1IrrPerm      [0 0 0 0 0 0 0] 0;

alpha2IrrPerm      [0 0 0 0 0 0 0]  0;

//Capillary Pressure Coefficients

m                  [0 0 0 0 0 0 0] 0.5;

a                  [0 0 0 0 0 0 0] 0.5;

alpha1IrrPres      [0 0 0 0 0 0 0] 0;

alpha1MaxPres      [0 0 0 0 0 0 0] 1;

Pc0                [1 -1 -2 0 0 0 0] 5;

PcMax              [1 -1 -2 0 0 0 0] 50;

// ************************************************************************* //
