FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(
    // selecting volume of free space and creating a cell set. (leaving solid out)
    {
        name    freeSpace;
        type    cellSet;
        action  new;
        source  fieldToCell; // fieldToCell FIELD MIN MAX //or boxToCell;
        sourceInfo
        {
        field epss;
	min 0;
	max 0.99; 
        }
    }
);

