FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    frontAndBack
    {
        type            empty;
    }
    
    top
    {
        type            inletOutlet;
        value           $internalField;
        inletValue      uniform (0 0 0);
    }

    bottom
    {
       type            fixedValue;
       value           uniform (0 0 0);
    }

    walls
    {
       type            fixedValue;
       value           uniform (0 0 0);
    }

    inlet
    {
	type            $velocityBC;
        value           uniform (0 $inletFlowRatePos 0);
    }
  

}


// ************************************************************************* //
